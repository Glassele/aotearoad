<div class="blog-template blog-template-default">
  <div class="container">
  	{% render 'breadcrumb' %}
    
    {% comment %}
    <div class="page-header">
      {% if current_tags %}    
      <h1>
        <a href="{{ blog.url }}">{% render 'multilang' with page_title %}</a> &raquo; {{ current_tags.first }}
      </h1>
      {% else %}    
      <h1>
        {% render 'multilang' with page_title %}
      </h1>
      {% endif %}
    </div>
    {% endcomment %}
    
    <div class="halo-blog-content">
      <div class="row">
        {% render 'sidebar-blog' %}
        {% render 'blog-template' %}
      </div>      
    </div>   
  </div>
</div>